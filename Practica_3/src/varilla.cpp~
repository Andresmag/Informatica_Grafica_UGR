#include "varilla.h"

//Constructor
Varilla::Varilla(){
	tronco.Modificar_divisiones(20);
}

// Funcion para dibujar el cabezal en su sitio
void Varilla::draw(char modo){
	glPushMatrix();
	glScalef(2,1,2);
	tronco.draw(modo);
	glPopMatrix();
	
	glPushMatrix();
	glScalef(0.25,4.7,0.25);
	varilla.draw(modo);
	glPopMatrix();
}
